{
  	"functions": {
		"source": ".",
		"ignore": [
			"firebase.json",
			"firbease-debug.log",
			"**/.*",
			"**/node_modules/**",
			"components/**",
			"helpers/**",
			"pages/**",
			"public/**",
			"firestore.rules",
			"README.md"
		]
	},
  	"hosting": [
		{
			"site": "YOUR FIREBASE HOSTING SITE",
			"public": "public/",
			"cleanUrls": true,
			"rewrites": [
				{
					"source": "**",
					"function": "nextjs-server"
				}
			]
		}
	]
}

